[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[{package.json,package-lock.json}]
indent_size = 2
indent_style = space

[.github/**/*.yml]
indent_size = 2
indent_style = space
